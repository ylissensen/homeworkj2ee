        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/homeworkj2ee</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Ca@789520</property>

        <!--以格式良好的方式显示SQL语句-->
        <property name="format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping resource="entities/UserEntity.hbm.xml"/>
        <mapping class="entities.UserEntity"/>


    </session-factory>
</hibernate-configuration>